<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_item_left"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#00000000">

    <ImageView
        android:id="@+id/hil_video_cover"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="5"
        android:gravity="center"
        android:background="@color/blue"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hil_video_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:text="Video Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hil_video_watch_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="4"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="Watch Time"/>

            <TextView
                android:id="@+id/hil_video_watch_process"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:text="Watch Process"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>